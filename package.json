{
  "name": "@moca/base",
  "version": "1.0.0",
  "description": "Moca base library",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "storybook": "start-storybook --docs -p 6006",
    "test": "jest --coverage",
    "lint": "eslint '*/**/*.{js,ts,tsx,jsx}' --quiet --fix"
  },
  "author": "Huy Nguyen",
  "license": "ISC",
  "keywords": [
    "ant design",
    "custom"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-options": "^5.3.18",
    "@storybook/api": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.2.0",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/storybook__addon-info": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "antd": "^4.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "chokidar": "^3.4.0",
    "core-js": "3",
    "dayjs": "^1.8.26",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "less": "^3.11.1",
    "less-loader": "^6.0.0",
    "lint-staged": "^10.2.2",
    "moment": "^2.25.3",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "rollup": "^2.8.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-typescript2": "^0.27.0",
    "sass-loader": "^8.0.2",
    "ts-import-plugin": "^1.6.6",
    "ts-jest": "^25.5.0",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/__mocks__/matchMedia.ts"
    ],
    "testPathIgnorePatterns": [
      "build",
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.ts",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.ts"
    },
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "lines": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/{!(index),}.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}"
    ],
    "verbose": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json",
      "node"
    ]
  },
  "peerDependencies": {
    "antd": "^4.2.0",
    "axios": "^0.19.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huynguyen-quoc/k-component.git"
  }
}
